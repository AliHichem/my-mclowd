{% extends '::base.html.twig' %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <div class="row-fluid">
            <div class="span12">
                <h3>{{ task.name }}</h3>
                
                <p>{{ task.description }}</p>
                
                <p><small>Posted by {{ task.userName }} on {{ task.createdAt|date }}</small></p>
                
                <p>Type: {{ task.type }}</p>
                <p>Budget: {{ task.budget }}</p>
                
                <a href="{{ path('app_proposals_new', {'task': task.id }) }}">Make Proposal</a>
            </div>
        </div>
        <div class="row-fluid" ng-controller="ProposalCtrl">
            <div ng-init='proposals={{ proposalsJson|raw }}'></div>
            {%  raw %}
            <div class="span12">
                
                <table class="table table-striped">
                    <tr>
                        <th>id</th>
                        <th>description</th>
                        <th>hours</th>
                        <th>duration</th>
                        <th>rate</th>
                        <th>action</th>
                    </tr>
                    <tr ng-repeat="proposal in proposals">
                        <td>{{ proposal.id }}</td>
                        <td>{{ proposal.description }}</td>
                        <td>{{ proposal.hours }}</td>
                        <td>{{ proposal.duration }}</td>
                        <td>{{ proposal.rate }}</td>
                        <td><a ng-click="acceptProposal(proposal.taskId, proposal.id)" class="btn btn-success" >accept</a></td>
                    </tr>
                </table>
            </div>
            {% endraw %}
        </div>
    </div>
</div>


   

{% endblock %}