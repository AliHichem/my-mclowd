            <input type="submit" value="Add new qualification" />
        </form>

        <ul>
            <li ng-repeat="qualification in data.qualifications">
                {{ qualification.name }} <button class="btn btn-danger" ng-click="removeQualification(qualification)">Remove</button>
            </li>
        </ul>
    </div>

