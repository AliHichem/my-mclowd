{% extends '::base.html.twig' %}

{% block content %}
<div class="row">
    <form  class="shared-form" class="form-wrap" action="{{ path('client_registration') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register" novalidate data-validate="parsley">
        <fieldset>
            <legend>Create an account</legend>
            <div class="span12">
                <a href="{{ path('contractor_registration') }}">Looking for work? Sign up as a contractor here.</a>
            </div>
            <div class="span6">
                {{ form_widget(form) }}
                <div span="6">
                    <input class="submit" id="client-register-submit" type="submit" value="Register as client" />
                </div>
                {{ form_rest(form) }}
            </div>
            <div class="span6">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="span12">Already have an account?</div>
                        <div class="span12">
                            <a href="{{ path('fos_user_security_login') }}">Sign in here</a>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="span12">Are you a contractor?</div>
                        <div class="span12">
                            <a href="{{ path('contractor_registration') }}">Create a contract account here</a>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
</div>
{% endblock %}
