{% extends '::main_layout.html.twig' %}

{% block content %}

    <div class="row-fluid">
        <div class="span12">
            <h1 class="underlined">Create a contractor account</h1>
            <a href="{{ path('client_registration') }}" class="addon">Not a contractor? Create a client account here.</a>
        </div>

        <div class="span6 last-span">
            <form  class="registration-form" action="{{ path('client_registration') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register" novalidate data-validate="parsley">
                <div class="form-item">
                    {{ form_row(form.fullName) }}
                </div>
                <div class="form-item">
                    {{ form_row(form.username) }}
                </div>
                <div class="form-item">
                    {{ form_row(form.email) }}
                </div>
                <div class="form-item">
                    {{ form_row(form.plainPassword['first']) }}
                </div>
                <div class="form-item">
                    {{ form_row(form.plainPassword['second']) }}
                </div>
                <div class="form-item">
                    {{ form_row(form.city) }}
                </div>
                <div class="form-item">
                    {{ form_row(form.country) }}
                </div>
                <div class="form-item source">
                    {{ form_row(form.hearSource) }}
                </div>

                <div class="form-item dark">
                    <div class="dark-wrapper">
                        <h2>Account type</h2>
                        <p>How do you want to represent yourself to clients?</p>

                        {% for accType in form.accountType %}
                            <div class="account-type-choice">
                                {{ form_widget(accType) }}
                                {{ accType.vars.label }}
                            </div>
                        {% endfor %}

                        <label for="display-name">Name to be displayed</label>
                        {{ form_widget(form.displayName) }}
                    </div>
                    <img class="small-shadow" src="/bundles/app/images/small-shadow.png" alt="Small Shadow" width="347" height="24" />
                </div>

                {{ form_rest(form) }}

                <div class="form-item">
                    <input type="checkbox"> Keep me logged in on this computer / device
                    <div class="button-wrapper">
                        <button type="submit" id="client-register-submit" class="special-button-gray-with-arrow">Create my Account</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="span4 pull-right">
            <div class="alternative">
                <div class="alternative-wrapper clearfix">
                    <h4>Already have an account?</h4>
                    <a href="{{ path('fos_user_security_login') }}" class="special-button-blue-with-arrow">Sign in here</a>
                </div>

                <div class="alternative-wrapper clearfix">
                    <h4>Are you a contractor</h4>
                    <a href="{{ path('contractor_registration') }}" class="special-button-blue-with-arrow">Create an account</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


